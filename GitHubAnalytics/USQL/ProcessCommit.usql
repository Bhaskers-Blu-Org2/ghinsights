
REFERENCE ASSEMBLY [GitHubAnalytics.USql];
REFERENCE ASSEMBLY [Newtonsoft.Json];

@Commit =
SELECT	 GitHubAnalytics.USql.Utility.GetString(Data, "sha") AS CommitSha
		,GitHubAnalytics.USql.Utility.GetInteger(Data, "author.id") AS AuthorId
		,GitHubAnalytics.USql.Utility.GetString(Data, "author.login") AS AuthorLogin
		,GitHubAnalytics.USql.Utility.GetBoolean(Data, "author.site_admin") AS AuthorSiteAdmin
		,GitHubAnalytics.USql.Utility.GetString(Data, "author.type") AS AuthorType
		,GitHubAnalytics.USql.Utility.GetDateTime(Data, "commit.author.date") AS CommitAuthorDate
        ,GitHubAnalytics.USql.Utility.GetPiiString(Data, "commit.author.email") AS CommitAuthorEmail
        ,GitHubAnalytics.USql.Utility.GetPiiString(Data, "commit.author.name") AS CommitAuthorName
		,GitHubAnalytics.USql.Utility.GetInteger(Data, "commit.comment_count") AS CommitCommentCount
		,GitHubAnalytics.USql.Utility.GetDateTime(Data, "commit.committer.date") AS CommitCommitterDate
        ,GitHubAnalytics.USql.Utility.GetPiiString(Data, "commit.committer.email") AS CommitCommitterEmail
        ,GitHubAnalytics.USql.Utility.GetPiiString(Data, "commit.committer.name") AS CommitCommitterName
		,GitHubAnalytics.USql.Utility.GetUSqlString(Data, "commit.message") AS CommitMessage
		,GitHubAnalytics.USql.Utility.GetString(Data, "commit.tree.sha") AS CommitTreeSha
		,GitHubAnalytics.USql.Utility.GetInteger(Data, "committer.id") AS CommitterId
		,GitHubAnalytics.USql.Utility.GetString(Data, "committer.login") AS CommitterLogin
		,GitHubAnalytics.USql.Utility.GetBoolean(Data, "committer.site_admin") AS CommitterSiteAdmin
		,GitHubAnalytics.USql.Utility.GetString(Data, "committer.type") AS CommitterType
		,GitHubAnalytics.USql.Utility.GetInteger(Data, "stats.additions") AS StatsAdditions
		,GitHubAnalytics.USql.Utility.GetInteger(Data, "stats.deletions") AS StatsDeletions
		,GitHubAnalytics.USql.Utility.GetInteger(Data, "stats.total") AS StatsTotal
		,GitHubAnalytics.USql.Utility.GetString(Data, "_id") AS EtlSourceId
        ,DateTime.Parse(IngestDate, null, System.Globalization.DateTimeStyles.AssumeUniversal).ToUniversalTime() AS EtlIngestDate
FROM Staging.GHTorrent.GitHubData AS e
WHERE EventName == "commits";

@CommitDeDupe =
SELECT   *
        ,ROW_NUMBER() OVER (PARTITION BY CommitSha ORDER BY EtlSourceId DESC) AS RowNumber
FROM @Commit;

DROP TABLE IF EXISTS dbo.Commit;

CREATE TABLE dbo.Commit
(
    INDEX IX_Commit
    CLUSTERED(CommitSha)
    PARTITIONED BY
    HASH(CommitSha, CommitAuthorDate)
    INTO 60
)
AS
SELECT   CommitSha
		,AuthorId
		,AuthorLogin
		,AuthorSiteAdmin
		,AuthorType
		,CommitAuthorDate
        ,CommitAuthorEmail
		,CommitAuthorName
		,CommitCommentCount
		,CommitCommitterDate
        ,CommitCommitterEmail
		,CommitCommitterName
		,CommitMessage
		,CommitTreeSha
		,CommitterId
		,CommitterLogin
		,CommitterSiteAdmin
		,CommitterType
		,StatsAdditions
		,StatsDeletions
		,StatsTotal
		,EtlSourceId
        ,EtlIngestDate
FROM @CommitDeDupe
WHERE RowNumber == 1;
