DROP TABLE IF EXISTS dbo.Views;

CREATE TABLE dbo.Views
(
    INDEX IX_View
    CLUSTERED(Urn)
    DISTRIBUTE
    HASH(Urn)
    INTO 20
)
AS
SELECT  Urn
					,RepoUrn
					,DataDate
					,Count
					,Uniques
					,SchemaVersion
					,ProcessedAt
					,EtlSourceId
					,EtlIngestDate
FROM @ViewsDeDupe
WHERE RowNumber == 1;

